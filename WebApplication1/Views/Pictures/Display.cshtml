@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@{
    ViewBag.Title = "Display";
}
@{
    WebApplication1.Models.PictureDBContext db = new WebApplication1.Models.PictureDBContext();
}

@using (Html.BeginForm())
{
    <table border="1">
        <thead>
            <tr>
                <th>Image</th>
                <th>Alt</th>

            </tr>
        </thead>
        <tbody>
            
            @foreach (var item in db.Pictures)
            {
                <tr>
                    <td><img src="~/images/@item.Link" width="100" height="100" />             </td>
                    <td>@item.Alt</td>

                </tr>
            }

        </tbody>
    </table>
}